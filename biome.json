{
	"$schema": "https://biomejs.dev/schemas/2.2.6/schema.json",
	"files": {
		"includes": ["**/*.ts", "**/*.js", "*.json"],
		"experimentalScannerIgnores": ["dist", "node_modules", "coverage"]
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"formatter": {
		"enabled": true,
		"lineWidth": 100,
		"attributePosition": "auto"
	},
	"assist": {
		"enabled": true,
		"actions": {
			"recommended": true
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
			"semicolons": "always",
			"trailingCommas": "es5"
		}
	},
	"json": {
		"formatter": { "enabled": false }
	}
}
